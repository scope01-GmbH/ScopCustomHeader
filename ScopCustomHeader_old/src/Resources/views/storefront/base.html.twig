{% sw_extends '@Storefront/storefront/base.html.twig' %}
{#<!-- CUSTOM STYLES -->#}
{% set config_params = page.header.extensions['ScopCH'] %}

{% block base_head %}
    <style>
        .custom-header-wrapper .custom-header .element{
            padding-top: {{ config_params.paddingTop }};
            padding-right: {{ config_params.paddingRight }};
            padding-bottom: {{ config_params.paddingBottom }};
            padding-left: {{ config_params.paddingLeft }};
        }

        .custom-header-warpper .custom-header .element .scop-header-link{
            color: {{ config_params.textColor }};
            transition: .3s;
        }

        a.scop-header-link:hover{
            color: {{ config_params.hover }} !important;
            text-decoration: none;
        }

        @media screen and (max-width: 768px){
            .custom-header-wrapper .custom-header .element{
                padding: {{ config_params.paddingMobile }};
            }
            .scop-text-left{
                display: {% if config_params.displayTextLeft == false %}none {% else %} block {% endif %};
            }
            .scop-text-middle{
                display: {% if config_params.displayTextMiddle == false %}none {% else %} block {% endif %};
            }
            .scop-text-right{
                display: {% if config_params.displayTextRight == false %}none {% else %} block {% endif %};
            }
        }
    </style>
    {{ parent() }}
{% endblock %}

{% block base_header %}
    {{ dump(config_params)}}

    <div class="custom-header-wrapper {% if config_params.mobileBreakpointDisplay %}hide{% endif %} " style="background-color:{{ config_params.background }}; min-height:{{ config_params.height ~ 'px' }};">
        <div class="container">

            {% if pack is not defined %}
                {% set pack = 'default' %}
            {% endif %}
            <!--WRAPPER-->
            <div class="custom-header " style="font-size: {{ config_params.textFontSize ~ 'px' }};">

                <!--LEFT TEXT-->
                <div class="element scop-text-left">
                                <span class="icon icon-{{ config_params.iconLeft }}">
{#                                    {% if config_params.iconLeft != null %}#}
                                    {#                                        {{ source('@Storefront/../app/storefront/dist/assets/icon/'~ pack ~'/'~ config_params.iconLeft ~'.svg') }}#}
                                    {#                                    {% endif %}#}
                                </span>
                    <span>
                                    <a class="scop-header-link " href="{{ config_params.textLinkLeft }}" target="_blank"> {{  config_params.left }} </a>
                                </span>
                </div>

                {#    Middle TEXT #}
                <div class="element scop-text-middle" style="">
                                <span class="icon icon-{{ config_params.iconLeft }}">
                                    {% if config_params.iconMiddle != null %}
                                        {{  source('@Storefront/../app/storefront/dist/assets/icon/'~ pack ~'/'~ config_params.iconMiddle ~'.svg') }}
                                    {% endif %}
                                </span>
                    <span>
                                    <a class="scop-header-link " href="{{ config_params.textLinkMiddle }}" target="_blank"> {{  config_params.left }} </a>
                                </span>
                </div>

                {#    Right TEXT #}
                <div class="element scop-text-right" style="">
                                <span class="icon icon-{{ config_params.iconLeft }}">
                                    {% if config_params.iconRight != null %}
                                        {{ source('@Storefront/../app/storefront/dist/assets/icon/'~ pack ~'/'~ config_params.iconRight ~'.svg') }}
                                    {% endif %}
                                </span>
                    <span>
                                    <a class="scop-header-link " href="{{ config_params.textLinkRight }}" target="_blank"> {{  config_params.left }} </a>
                                </span>
                </div>

            </div>

        </div>
    </div>
    {{ parent() }}
{% endblock %}
